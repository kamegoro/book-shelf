generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
  output   = "../ERD.md"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String  @id @default(cuid())
  name         String
  email        String  @unique
  passwordHash String
  avatar       String?
}

model Register {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  token     String
  name      String
  email     String
}
