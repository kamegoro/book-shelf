generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
  output   = "../ERD.md"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// TODO: Migrationファイルの作成
model User {
  id           String @id @default(cuid())
  name         String
  email        String @unique
  passwordHash String
  avatar       String
}
